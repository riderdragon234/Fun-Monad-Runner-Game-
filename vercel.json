{
    "version": 2,
    "builds": [
      {
        "src": "backend/Server.js",
        "use": "@vercel/node",
        "config": { "zeroConfig": true }
      },
      {
        "src": "frontend/index.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/Server.js" },
      { "src": "/(.*)", "dest": "frontend/index.html" }
    ]
  }
  